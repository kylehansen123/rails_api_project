<!DOCTYPE html>
<html>
  <head>
    <title>Simple Map</title>
    <meta name="viewport" content="initial-scale=1.0, user-scalable=no">
    <meta charset="utf-8">
    <style>
      html, body, #map-canvas {
        height: 80%;
        width: 80%;
        margin: 5px;
        padding: 10px

      }
    </style>
    <script src="https://maps.googleapis.com/maps/api/js?v=3.exp"></script>
    <script>
var map;
function initialize() {
  var mapOptions = {
    zoom: 10,
    center: new google.maps.LatLng(<%= @latitude %>, <%= @longitude %>)
  };
  map = new google.maps.Map(document.getElementById('map-canvas'),
      mapOptions);
}

google.maps.event.addDomListener(window, 'load', initialize);

    </script>
  </head>
  <body>
    <h1><%="Weather for " + @address.capitalize %></h1>

    <p><%= "The current temperature at " + @address + " is " + @temperature.to_s + " degrees." %></p>

    <p><%= "The outlook for the next hour is: " + @next_hour %></p>

    <p><%= "The outlook for the next day is: " + @next_day %></p>
    <div id="map-canvas"></div>
  </body>
</html>

